<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_day_name"
            app:layout_constraintStart_toEndOf="@+id/txt_day_name"
            app:layout_constraintTop_toTopOf="@+id/txt_day_name"
            app:srcCompat="@drawable/ic_0_clear_sky_morning"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="icon"
            />

        <TextView
            android:id="@+id/txt_day_name"
            android:layout_width="94dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Monday"
            android:textColor="@color/darkBackground"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_temprature"
            android:layout_width="43dp"
            android:layout_height="19dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_icon"
            app:layout_constraintStart_toEndOf="@+id/img_icon"
            app:layout_constraintTop_toTopOf="@+id/img_icon"
            app:layout_constraintVertical_bias="1.0"
            tools:text="10"
            android:textColor="@color/darkBackground"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

